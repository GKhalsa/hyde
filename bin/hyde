#!/usr/bin/env ruby
require 'filewatcher'
require_relative '../lib/structure'
require_relative '../lib/output'


query = ARGV[0]
file_path = ARGV[1]
post_title = ARGV[2..-1]
structure = Structure.new
output = Output.new

  case query
  when "new"
    structure.create_tree(file_path)
  when "build"
    output.build(file_path)
  when "post"
    structure.create_post(file_path, post_title)
  when "watchfs"
    FileWatcher.new(["#{file_path}"]).watch() do |filename, event|
      if(event == :changed)
        `bin/hyde build #{file_path}`
      end
    end
  # when "autogitpush"
  #   FileWatcher.new(["#{file_path}/output"]).watch() do |filename, event|
  #     if(event == :changed)
  #       output.push_to_github_pages("#{file_path}")
  #     end
  #   end
  else
    puts "Invalid Commmand"
  end
